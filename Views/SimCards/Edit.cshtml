@model SmartFleet.Models.SimCard
@{
    ViewData["Title"] = "Edit Sim Card";
}

<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/pages/simcard/edit.css">
    
</head>

<div class="edit-layout-container">
    <div class="edit-form-wrapper">
        <!-- Navigation Back Button -->
        <div class="edit-navigation">
            <a asp-action="Index" class="edit-back-link">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>

        <!-- Heading -->
        <h1 class="edit-heading">Edit Sim Card</h1>

        <!-- Form -->
        <form asp-action="Edit" class="edit-custom-form">
            <div asp-validation-summary="ModelOnly" class="edit-validation-message"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Row 1: VehicleId & SimNumber -->
            <div class="edit-input-row">
                <div class="edit-input-col">
                    <div class="edit-input-group">
                        <label asp-for="VehicleId" class="edit-input-label"></label>
                        <select asp-for="VehicleId" class="edit-dropdown" asp-items="ViewBag.VehicleId"></select>
                        <span asp-validation-for="VehicleId" class="edit-validation-message"></span>
                    </div>
                </div>
                <div class="edit-input-col">
                    <div class="edit-input-group">
                        <label asp-for="SimNumber" class="edit-input-label"></label>
                        <input asp-for="SimNumber" class="edit-input-field" />
                        <span asp-validation-for="SimNumber" class="edit-validation-message"></span>
                    </div>
                </div>
            </div>

            <!-- Row 2: Carrier & ActivatedAt -->
            <div class="edit-input-row">
                <div class="edit-input-col">
                    <div class="edit-input-group">
                        <label asp-for="Carrier" class="edit-input-label"></label>
                        <input asp-for="Carrier" class="edit-input-field" />
                        <span asp-validation-for="Carrier" class="edit-validation-message"></span>
                    </div>
                </div>
                <div class="edit-input-col">
                    <div class="edit-input-group">
                        <label asp-for="ActivatedAt" class="edit-input-label"></label>
                        <input asp-for="ActivatedAt" class="edit-input-field" />
                        <span asp-validation-for="ActivatedAt" class="edit-validation-message"></span>
                    </div>
                </div>
            </div>

            <!-- Status Checkbox (Single Row) -->
            <div class="edit-input-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>

            <!-- CreatedAt (Single Row) -->
            <div class="edit-input-group">
                <label asp-for="CreatedAt" class="edit-input-label"></label>
                <input asp-for="CreatedAt" class="edit-input-field" />
                <span asp-validation-for="CreatedAt" class="edit-validation-message"></span>
            </div>

            <!-- Submit Button -->
            <div class="edit-button-group">
                <input type="submit" value="Save" class="edit-primary-button" />
            </div>
        </form>
    </div>
</div>

<!-- Scripts Section -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}