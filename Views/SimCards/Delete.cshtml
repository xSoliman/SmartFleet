@model SmartFleet.Models.SimCard
@{
    ViewData["Title"] = "Delete";
}
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/pages/simcard/delete.css">
    
</head>
<div class="container delete-container">
    <h1><i class="fas fa-exclamation-triangle"></i> Delete SimCard</h1>
    <h3>Are you sure you want to delete this SimCard?</h3>
    <div class="simcard-info">
        <dl class="row">
            <dt class="col-sm-4">Vehicle ID:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Vehicle.Id)</dd>
            <dt class="col-sm-4">Sim Number:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.SimNumber)</dd>
            <dt class="col-sm-4">Carrier:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Carrier)</dd>
            <dt class="col-sm-4">Activated At:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.ActivatedAt)</dd>
            <dt class="col-sm-4">Status:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
            <dt class="col-sm-4">Created At:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <br />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>