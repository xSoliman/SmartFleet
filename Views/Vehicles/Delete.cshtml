@model SmartFleet.Models.Vehicle

@{
    ViewData["Title"] = "Delete";
}

<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/pages/vehicle/delete.css">
    
</head>
<div class="container delete-container">
    <h1><i class="fas fa-exclamation-triangle"></i> Delete Vehicle</h1>
    <h3>Are you sure you want to delete this vehicle?</h3>

    <div class="vehicle-info">
        <dl class="row">
            <dt class="col-sm-4">Model:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Model)</dd>

            <dt class="col-sm-4">Type:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

            <dt class="col-sm-4">Capacity:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Capacity)</dd>
           

            <dt>Vehicle Image:</dt>
            <dd>
                <img src="@Url.Content(Model.VehicleImageUrl)" alt="Vehicle Image" style="width:150px; height:100px;" />
            </dd>




            <dt class="col-sm-4">License Plate:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.LicensePlate)</dd>

            <dt class="col-sm-4">Status:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

            <dt class="col-sm-4">Distance:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Distance)</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <br />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
