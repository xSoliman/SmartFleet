@model SmartFleet.Models.Maintenance
@{
    ViewData["Title"] = "Delete Maintenance";
}
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/pages/maintenance/delete.css">
   
</head>

<div class="container delete-container">
    <h1><i class="fas fa-exclamation-triangle"></i> Delete Maintenance</h1>
    <h3>Are you sure you want to delete this maintenance record?</h3>
    <div class="maintenance-info">
        <dl class="row">
            <dt class="col-sm-4">Vehicle ID:</dt>
            <dd class="col-sm-8">@Model.Vehicle.Id</dd>
            <dt class="col-sm-4">Reported User ID:</dt>
            <dd class="col-sm-8">@Model.ReportedUser.Id</dd>
            <dt class="col-sm-4">Issue Description:</dt>
            <dd class="col-sm-8">@Model.IssueDescription</dd>
            <dt class="col-sm-4">Repair Status:</dt>
            <dd class="col-sm-8">@Model.RepairStatus</dd>
            <dt class="col-sm-4">Priority:</dt>
            <dd class="col-sm-8">@Model.Priority</dd>
            <dt class="col-sm-4">Repaired At:</dt>
            <dd class="col-sm-8">@Model.RepairedAt</dd>
            <dt class="col-sm-4">Created At:</dt>
            <dd class="col-sm-8">@Model.CreatedAt</dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <br />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>