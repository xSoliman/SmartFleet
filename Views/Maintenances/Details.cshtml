@model SmartFleet.Models.Maintenance
@{
    ViewData["Title"] = "Maintenance Details";
}
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/pages/maintenance/details.css">
    
</head>


<div class="details-layout-container">
    <div class="details-form-wrapper">
        <!-- Navigation Back Button -->
        <div class="details-navigation">
            <a asp-action="Index" class="details-back-link">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>

        <!-- Heading -->
        <h1 class="details-heading">Maintenance Details</h1>

        <!-- Display Data -->
        <div class="details-display-group">
            <label class="details-display-label">@Html.DisplayNameFor(model => model.Vehicle)</label>
            <div class="details-display-value">@Html.DisplayFor(model => model.Vehicle.Id)</div>
        </div>

        <div class="details-display-group">
            <label class="details-display-label">@Html.DisplayNameFor(model => model.ReportedUser)</label>
            <div class="details-display-value">@Html.DisplayFor(model => model.ReportedUser.Id)</div>
        </div>

        <div class="details-display-group">
            <label class="details-display-label">@Html.DisplayNameFor(model => model.RepairStatus)</label>
            <div class="details-display-value">@Html.DisplayFor(model => model.RepairStatus)</div>
        </div>

        <div class="details-display-group">
            <label class="details-display-label">@Html.DisplayNameFor(model => model.Priority)</label>
            <div class="details-display-value">@Html.DisplayFor(model => model.Priority)</div>
        </div>

        <div class="details-display-group">
            <label class="details-display-label">@Html.DisplayNameFor(model => model.RepairedAt)</label>
            <div class="details-display-value">@Html.DisplayFor(model => model.RepairedAt)</div>
        </div>

        <div class="details-display-group">
            <label class="details-display-label">@Html.DisplayNameFor(model => model.CreatedAt)</label>
            <div class="details-display-value">@Html.DisplayFor(model => model.CreatedAt)</div>
        </div>

        <div class="details-display-group">
            <label class="details-display-label">@Html.DisplayNameFor(model => model.IssueDescription)</label>
            <div class="details-display-value">@Html.DisplayFor(model => model.IssueDescription)</div>
        </div>

        <!-- Button Group -->
        <div class="details-button-group">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="details-primary-button">Edit</a>
        </div>
    </div>
</div>