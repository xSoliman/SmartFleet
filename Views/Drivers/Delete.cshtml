@model SmartFleet.Models.Driver

@{
    ViewData["Title"] = "Delete Driver";
}


<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/pages/driver/delete.css">
    
</head>
<div class="container delete-container">
    <h1><i class="fas fa-exclamation-triangle"></i> Delete Driver</h1>
    

<h3>Are you sure you want to delete this driver?</h3>
    <div class="vehicle-info">
        <dl class="row">

        <dt class="col-sm-2">
            UserName
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            License Number
        </dt>
        <dd class="col-sm-10">
            @Model.LicenseNumber
        </dd>
    </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <br />
        <input type="submit" value="Delete" class="btn btn-danger" />  
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
