@model SmartFleet.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/pages/order/delete.css">
</head>

<div class="container delete-container">
    <h1><i class="fas fa-exclamation-triangle"></i> Delete Order</h1>
    <h3>Are you sure you want to delete this order?</h3>

    <div class="order-info">
        <dl class="row">
            <dt class="col-sm-4">User:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Id)</dd>

            <dt class="col-sm-4">Vehicle Type:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.VehicleType)</dd>

            <dt class="col-sm-4">Passenger Count:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PassengerCount)</dd>

            <dt class="col-sm-4">Trip Start Location:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TripStartLocation)</dd>

            <dt class="col-sm-4">Trip End Location:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TripEndLocation)</dd>

            <dt class="col-sm-4">Trip Start Date:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TripStartDate)</dd>

            <dt class="col-sm-4">Trip End Date:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.TripEndDate)</dd>

            <dt class="col-sm-4">Reason:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Reason)</dd>

            <dt class="col-sm-4">Status:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

            <dt class="col-sm-4">Created At:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <br />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
