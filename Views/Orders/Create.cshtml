@model SmartFleet.Models.Order

@{
    ViewData["Title"] = "Create Order";
}

<head>
    <link rel="stylesheet" href="~/css/pages/order/create.css" />
</head>

<div class="order-layout-container">
    <div class="order-form-wrapper">
        <div class="order-navigation">
            <a asp-action="Index" class="order-back-link">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
        <h2 class="order-heading">Create Order</h2>
        <form asp-action="Create" method="post" class="order-custom-form">
            <div asp-validation-summary="ModelOnly" class="order-validation-message"></div>

            <input hidden type="text" class="order-input-field" value="@ViewBag.UserId" readonly />

            <div class="order-input-group">
                <label asp-for="PassengerCount" class="order-input-label"></label>
                <input asp-for="PassengerCount" class="order-input-field" />
                <span asp-validation-for="PassengerCount" class="order-validation-message"></span>
            </div>

            <div class="order-input-group">
                <label asp-for="TripStartLocation" class="order-input-label"></label>
                <input asp-for="TripStartLocation" class="order-input-field" />
                <span asp-validation-for="TripStartLocation" class="order-validation-message"></span>
            </div>

            <div class="order-input-group">
                <label asp-for="TripEndLocation" class="order-input-label"></label>
                <input asp-for="TripEndLocation" class="order-input-field" />
                <span asp-validation-for="TripEndLocation" class="order-validation-message"></span>
            </div>

            <div class="order-input-row">
                <div class="order-input-col">
                    <label asp-for="TripStartDate" class="order-input-label"></label>
                    <input asp-for="TripStartDate" class="order-input-field" type="date" />
                    <span asp-validation-for="TripStartDate" class="order-validation-message"></span>
                </div>
                <div class="order-input-col">
                    <label asp-for="TripEndDate" class="order-input-label"></label>
                    <input asp-for="TripEndDate" class="order-input-field" type="date" />
                    <span asp-validation-for="TripEndDate" class="order-validation-message"></span>
                </div>
            </div>

            <div class="order-input-group">
                <label asp-for="Reason" class="order-input-label"></label>
                <input asp-for="Reason" class="order-input-field" />
                <span asp-validation-for="Reason" class="order-validation-message"></span>
            </div>

            <div class="order-input-group">
                <label asp-for="VehicleType" class="order-input-label"></label>
                <select asp-for="VehicleType" class="order-dropdown" asp-items="ViewBag.VehicleTypes">
                    <option value="">-- Select Vehicle Type --</option>
                </select>
                <span asp-validation-for="VehicleType" class="order-validation-message"></span>
            </div>

           

            <div class="order-button-group">
                <button type="submit" class="order-primary-button">Create</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
